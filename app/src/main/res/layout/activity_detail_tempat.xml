<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".DetailTempat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgTempat"
            android:layout_width="201dp"
            android:layout_height="155dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/brandenburggate"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BRANDEDBURG GATE"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingTop="15dp"/>

        <TextView
            android:id="@+id/txtDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian Ramdhan Ian RamdhanIan Ramdhan Ian Ramdhan"/>

    </LinearLayout>

</ScrollView>